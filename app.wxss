/**app.wxss**/

page {
  background-color: #f8f8f8;
  height: 100%;
  font-size: 32rpx;
  line-height: 1.6;
}

.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 200rpx 0;
  box-sizing: border-box;
}

.view-column {
  height: 100%;
  display: flex;
  flex-direction: column;
}


.view-row {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  box-sizing: border-box;
  margin: 10px;
}

.scroll_x_box {
  height: 245rpx;
  white-space: nowrap;
  display: flex;
}

.recommend_hot_box {
  width: 230rpx;
  height: 245rpx;
  margin-right: 24rpx;
  display: inline-block;
}

.text-radius-right {
  width: 100%;
  border-radius: 0rpx;
  border-bottom-right-radius: 10rpx;
  border-top-right-radius: 10rpx;
  background: peachpuff;
  padding: 10px;
  align-items: center;
}

.text-radius {
  width: 100%;
  border-radius: 10rpx;
  background: peachpuff;
  padding: 10px;
}

.button-next-css {
  position: relative;
  margin: 60rpx;
}

.loading {
  margin: 0 5px;
  width: 20px;
  height: 20px;
  display: inline-block;
  vertical-align: middle;
  -webkit-animation: weuiLoading 1s steps(12, end) infinite;
  animation: weuiLoading 1s steps(12, end) infinite;
  background-size: 100%;
}
.loadmore {
  width: 65%;
  margin: 1.5em auto;
  line-height: 1.6em;
  font-size: 14px;
  text-align: center;
}
.loadmore__tips {
  display: inline-block;
  vertical-align: middle;
}

.demo-text-1{
  position: relative;
  align-items: center;
  justify-content: center;
  background-color: #1AAD19;
  color: #FF0000;
  font-size: 36rpx;
}
